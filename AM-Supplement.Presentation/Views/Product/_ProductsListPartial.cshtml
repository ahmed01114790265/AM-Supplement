@model List<AM_Supplement.Contracts.DTO.ProductDTO>

<div class="row">
    @if (Model.Any())
    {
        foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <img src="@product.ImageUrl" class="card-img-top" style="height:220px; object-fit:cover;" alt="@product.Name" />
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p>Type: @product.Type</p>
                        <p>Weight: @product.Weight</p>
                        <p class="text-success fw-bold">Discount: @product.DiscountPercentage %</p>
                        <p class="fw-bold">Price: $@product.Price</p>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-center">No products found.</p>
    }
</div>
