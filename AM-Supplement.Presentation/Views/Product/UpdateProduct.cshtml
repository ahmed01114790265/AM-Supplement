@using AM_Supplement.Shared.Enums
@model ProductDTO
@{
    ViewData["Title"] = "Edit Product";
}

<h2>Edit Product</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

<form asp-action="UpdateProduct" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Taste</label>
        <input asp-for="Taste" class="form-control" />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>
    <div class="form-group">
        <label>Discount %</label>
        <input asp-for="DiscountPercentage" type="number" step="1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Weight</label>
        <input asp-for="Weight" class="form-control" />
    </div>
    <div class="form-group">
        <label>Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <div class="form-group">
        <label>Type</label>
        <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<ProductType>()"></select>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update Product</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Back</a>
</form>
