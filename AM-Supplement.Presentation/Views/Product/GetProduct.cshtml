@model AM_Supplement.Contracts.DTO.ProductDTO

@{
    ViewData["Title"] = Model.Name;
    // حساب السعر النهائي بعد الخصم للعرض
    decimal discountedPrice = Model.Price - (Model.Price * Model.DiscountPercentage / 100);
}

<div class="container mt-5">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb small">
            <li class="breadcrumb-item"><a asp-action="GetProductsList" class="text-decoration-none">Products</a></li>
            <li class="breadcrumb-item active">@Model.Type</li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <div class="row g-5">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm p-3 sticky-top" style="top: 20px; z-index: 10;">
                @* التعديل الأساسي: 
                   1. تغيير المسار إلى /assets/products/ ليتوافق مع الإعدادات الجديدة.
                   2. تحديث اسم الصورة الافتراضية إلى default-product.png.
                *@
                <img src="/assets/products/@(string.IsNullOrEmpty(Model.ImageUrl) ? "default-product.png" : Model.ImageUrl)"
                     class="img-fluid rounded"
                     style="max-height: 500px; width: 100%; object-fit: contain;"
                     alt="@Model.Name"
                     onerror="this.onerror=null;this.src='/assets/products/default-product.png';" />
            </div>
        </div>

        <div class="col-md-6">
            <div class="ps-lg-4">
                <span class="badge bg-primary mb-2 opacity-75">@Model.Type</span>
                <h1 class="display-5 fw-bold mb-3 text-dark">@Model.Name</h1>

                <div class="d-flex align-items-center mb-4">
                    @if (Model.DiscountPercentage > 0)
                    {
                        <h2 class="text-success fw-bold mb-0">@discountedPrice.ToString("C")</h2>
                        <span class="text-muted text-decoration-line-through ms-3 fs-5">@Model.Price.ToString("C")</span>
                        <span class="badge bg-danger ms-3 shadow-sm">SAVE @Model.DiscountPercentage%</span>
                    }
                    else
                    {
                        <h2 class="text-dark fw-bold mb-0">@Model.Price.ToString("C")</h2>
                    }
                </div>

                <p class="lead text-muted mb-4" style="line-height: 1.6;">@Model.Description</p>

                <div class="card bg-light border-0 mb-4 shadow-sm">
                    <div class="card-body">
                        <div class="row text-center g-2">
                            <div class="col-4 border-end">
                                <small class="text-muted d-block text-uppercase" style="font-size: 0.7rem;">Flavor</small>
                                <strong class="text-dark">@Model.Taste</strong>
                            </div>
                            <div class="col-4 border-end">
                                <small class="text-muted d-block text-uppercase" style="font-size: 0.7rem;">Weight</small>
                                <strong class="text-dark">@Model.Weight g</strong>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block text-uppercase" style="font-size: 0.7rem;">Status</small>
                                @if (Model.Stock > 0)
                                {
                                    <span class="text-success fw-bold"><i class="bi bi-check2-circle"></i> In Stock</span>
                                }
                                else
                                {
                                    <span class="text-danger fw-bold"><i class="bi bi-x-circle"></i> Sold Out</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                @if (Model.Stock > 0 && Model.Stock < 20)
                {
                    <div class="mb-4">
                        <div class="d-flex justify-content-between mb-1">
                            <small class="text-danger fw-bold">🔥 Low Stock: Only @Model.Stock left!</small>
                        </div>
                        <div class="progress" style="height: 8px; border-radius: 10px; background-color: #e9ecef;">
                            <div class="progress-bar bg-danger progress-bar-striped progress-bar-animated"
                                 role="progressbar"
                                 style="width: @(Model.Stock * 5)%;"></div>
                        </div>
                    </div>
                }

                @if (Model.Stock > 0)
                {
                    <form asp-controller="Cart" asp-action="Add" method="post" class="mt-4">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="productId" value="@Model.Id" />

                        <div class="row g-2">
                            <div class="col-3">
                                <label class="small text-muted mb-1 d-block">Qty</label>
                                <input type="number" name="quantity" value="1" min="1" max="@Model.Stock"
                                       class="form-control form-control-lg text-center fw-bold border-2" />
                            </div>
                            <div class="col-9 d-flex align-items-end">
                                <button type="submit" class="btn btn-success btn-lg w-100 shadow-sm fw-bold py-3 transition-btn">
                                    <i class="bi bi-cart-plus me-2"></i> ADD TO CART
                                </button>
                            </div>
                        </div>
                    </form>
                }
                else
                {
                    <div class="alert alert-secondary text-center mt-4 fw-bold border-0 shadow-sm">
                        <i class="bi bi-bell me-2"></i> Notify me when back in stock
                    </div>
                }

                <div class="mt-5 pt-4 border-top">
                    <div class="row g-3">
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                                    <i class="bi bi-truck fs-4 text-primary"></i>
                                </div>
                                <span class="small text-muted fw-medium">Free shipping over $50</span>
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="d-flex align-items-center">
                                <div class="bg-primary bg-opacity-10 p-2 rounded me-3">
                                    <i class="bi bi-shield-check fs-4 text-primary"></i>
                                </div>
                                <span class="small text-muted fw-medium">100% Authentic Product</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .transition-btn {
        transition: all 0.2s ease;
    }

        .transition-btn:hover {
            transform: scale(1.02);
            filter: brightness(1.1);
        }
    /* تحسين شكل الـ Sticky Card */
    .sticky-top {
        transition: box-shadow 0.3s ease;
    }

        .sticky-top:hover {
            box-shadow: 0 0.5rem 1rem rgba(0,0,0,0.15) !important;
        }
</style>