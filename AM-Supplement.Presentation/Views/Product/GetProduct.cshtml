@model AM_Supplement.Contracts.DTO.ProductDTO

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-5">
    <div class="row">
        <!-- Image -->
        <div class="col-md-5">
            <img src="@Model.ImageUrl"
                 class="img-fluid rounded shadow"
                 alt="@Model.Name" />
        </div>

        <!-- Details -->
        <div class="col-md-7">
            <h2 class="fw-bold">@Model.Name</h2>
            <p class="text-muted">@Model.Description</p>
            <hr />

            <p><strong>Type:</strong> @Model.Type</p>
            <p><strong>Taste:</strong> @Model.Taste</p>
            <p><strong>Weight:</strong> @Model.Weight g</p>

            <h4 class="text-success fw-bold">@Model.Price.ToString("C")</h4>

            @if (Model.DiscountPercentage > 0)
            {
                <span class="badge bg-danger">@Model.DiscountPercentage % OFF</span>
            }

            <p class="mt-3">
                <strong>Stock:</strong>
                @if (Model.Stock > 0)
                {
                    <span class="text-success">In Stock</span>
                }
                else
                {
                    <span class="text-danger">Out of Stock</span>
                }
            </p>

            <!-- Add To Cart -->
            @if (Model.Stock > 0)
            {
                <form asp-controller="Cart"
                      asp-action="Add"
                      method="post"
                      class="mt-4 w-50">

                    <input type="hidden" name="productId" value="@Model.Id" />

                    <div class="input-group">
                        <input type="number"
                               name="quantity"
                               value="1"
                               min="1"
                               max="@Model.Stock"
                               class="form-control" />

                        <button type="submit" class="btn btn-success">
                            🔥 Add To Cart
                        </button>
                    </div>
                </form>
            }

            <a asp-action="GetProductsList"
               class="btn btn-link mt-4">
                ← Back to Products
            </a>
        </div>
    </div>
</div>



