@using AM_Supplement.Shared.Enums
@model EditProductViewModel
@{
    Layout = "_Layout";
    ViewData["Title"] = "Edit Product";
}

<div class="container py-5">
    <div class="d-flex align-items-center justify-content-between mb-4">
        <div>
            <h2 class="text-primary fw-bold mb-0">✏️ Edit Product</h2>
            <p class="text-muted">Modifying: <span class="text-dark fw-bold">@Model.Name</span></p>
        </div>
        <a asp-action="Products" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Back to Inventory
        </a>
    </div>

    <form asp-action="EditProduct" method="post" enctype="multipart/form-data" class="row g-4">
        @Html.AntiForgeryToken()

        @* الحقول المخفية ضرورية لعملية التحديث *@
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CurrentImage" />

        <div class="col-lg-8">
            <div class="card border-0 shadow-sm p-4">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3 small"></div>

                <div class="row g-3">
                    <div class="col-md-12">
                        <label asp-for="Name" class="form-label fw-bold text-dark"></label>
                        <input asp-for="Name" class="form-control form-control-lg bg-light border-0" />
                        <span asp-validation-for="Name" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Price" class="form-label fw-bold text-dark"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-white border-end-0">$</span>
                            <input asp-for="Price" class="form-control bg-light border-0" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="Price" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="Stock" class="form-label fw-bold text-dark"></label>
                        <input asp-for="Stock" class="form-control bg-light border-0" type="number" />
                        <span asp-validation-for="Stock" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Description" class="form-label fw-bold text-dark"></label>
                        <textarea asp-for="Description" rows="5" class="form-control bg-light border-0"></textarea>
                        <span asp-validation-for="Description" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Taste" class="form-label fw-bold text-dark"></label>
                        <input asp-for="Taste" class="form-control bg-light border-0" />
                        <span asp-validation-for="Taste" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="Weight" class="form-label fw-bold text-dark">Weight (g)</label>
                        <div class="input-group">
                            <input asp-for="Weight" class="form-control bg-light border-0" type="number" />
                            <span class="input-group-text bg-white border-start-0">g</span>
                        </div>
                        <span asp-validation-for="Weight" class="text-danger small"></span>
                    </div>

                    <div class="col-md-4">
                        <label asp-for="DiscountPercentage" class="form-label fw-bold text-dark">Discount %</label>
                        <div class="input-group">
                            <input asp-for="DiscountPercentage" class="form-control bg-light border-0" type="number" />
                            <span class="input-group-text bg-white border-start-0">%</span>
                        </div>
                        <span asp-validation-for="DiscountPercentage" class="text-danger small"></span>
                    </div>

                    <div class="col-12">
                        <label asp-for="Type" class="form-label fw-bold text-dark">Category</label>
                        <select asp-for="Type" class="form-select bg-light border-0" asp-items="Html.GetEnumSelectList<ProductType>()">
                            <option value="">-- Select Category --</option>
                        </select>
                        <span asp-validation-for="Type" class="text-danger small"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card border-0 shadow-sm p-4 text-center mb-4">
                <label class="form-label fw-bold text-dark mb-3">Product Image</label>

                <div class="preview-container mb-3 bg-light rounded p-3 d-flex align-items-center justify-content-center" style="height: 280px; border: 2px dashed #dee2e6;">
                    @* التعديل هنا: المسار الجديد يبدأ بـ /assets/products/ *@
                    <img id="imagePreview"
                         src="/assets/products/@(string.IsNullOrEmpty(Model.CurrentImage) ? "default-product.png" : Model.CurrentImage)"
                         class="img-fluid rounded shadow-sm"
                         style="max-height: 100%; object-fit: contain;"
                         onerror="this.src='/assets/products/default-product.png';" />
                </div>

                <div class="text-start">
                    <label asp-for="NewImage" class="form-label small fw-bold text-muted">Update Photo</label>
                    <input asp-for="NewImage" type="file" class="form-control form-control-sm"
                           accept=".jpg,.jpeg,.png,.webp"
                           onchange="previewImage(this)" />
                    <span asp-validation-for="NewImage" class="text-danger small"></span>
                </div>
                <div class="form-text text-start mt-2">
                    <i class="bi bi-exclamation-triangle-fill text-warning"></i>
                    Leaving this empty will keep the current image.
                </div>
            </div>

            <div class="card border-0 shadow-sm p-4">
                <button type="submit" class="btn btn-primary btn-lg w-100 shadow-sm mb-2 fw-bold">
                    <i class="bi bi-save"></i> Save Changes
                </button>
                <a asp-action="Products" class="btn btn-light w-100">Cancel</a>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function previewImage(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('imagePreview').src = e.target.result;
                }
                reader.readAsDataURL(input.files[0]);
            }
        }
    </script>
}