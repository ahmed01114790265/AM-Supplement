@using AM_Supplement.Contracts.DTO
@model OrderDetailsDTO
@{
    Layout = "_Layout";
}


<h2>📄 Order Details</h2>

<p><strong>Status:</strong> @Model.Status</p>
<p><strong>Total:</strong> $@Model.TotalAmount</p>

<table class="table table-bordered bg-white">
    <thead>
        <tr>
            <th>Product</th>
            <th>Price</th>
            <th>Qty</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model.Items)
        {
            <tr>
                <td>@i.ProductName</td>
                <td>$@i.Price</td>
                <td>@i.Quantity</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Orders" class="btn btn-secondary mt-3">Back to Orders</a>
