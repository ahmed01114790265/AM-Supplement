@{
    Layout = "_Layout";
    ViewData["Title"] = "Dashboard";
}

<h2 class="mb-4">📊 Dashboard</h2>

<div class="row g-4">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Total Products</h6>
                <h3>@ViewBag.TotalProducts</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Total Orders</h6>
                <h3>@ViewBag.TotalOrders</h3>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h6>Total Revenue</h6>
                <h3>$@ViewBag.TotalRevenue</h3>
            </div>
        </div>
    </div>
</div>
