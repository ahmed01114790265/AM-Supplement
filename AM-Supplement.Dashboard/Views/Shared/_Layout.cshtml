<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        :root {
            --sidebar-width: 260px;
        }

        body {
            background-color: #f8f9fa;
        }

        aside {
            width: var(--sidebar-width);
            min-height: 100vh;
            position: sticky;
            top: 0;
            z-index: 1000;
            transition: all 0.3s;
        }

        .nav-link {
            border-radius: 8px;
            padding: 0.8rem 1rem;
            transition: background 0.2s, color 0.2s;
            color: rgba(255, 255, 255, 0.7) !important;
        }

            .nav-link:hover {
                background: rgba(255, 255, 255, 0.1);
                color: #fff !important;
            }

            .nav-link.active {
                background: #0d6efd !important;
                color: #fff !important;
                font-weight: bold;
            }

        .user-profile-box {
            background: rgba(255, 255, 255, 0.05);
            border-radius: 12px;
            padding: 15px;
        }

        main {
            min-width: 0; /* Prevents flex items from overflowing */
        }
    </style>
</head>
<body>

    <div class="d-flex">

        <aside class="bg-dark text-white d-flex flex-column p-3">
            <div class="mb-4 px-2">
                <h4 class="fw-bold"><i class="bi bi-shield-lock-fill me-2 text-primary"></i>Admin</h4>
            </div>

            <ul class="nav nav-pills flex-column gap-2 mb-auto">
                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")"
                       asp-controller="Admin" asp-action="Index">
                        <i class="bi bi-speedometer2 me-2"></i> Dashboard
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Products" ? "active" : "")"
                       asp-controller="Admin" asp-action="Products">
                        <i class="bi bi-box-seam me-2"></i> Products
                    </a>
                </li>

                <li class="nav-item">
                    <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Orders" ? "active" : "")"
                       asp-controller="Admin" asp-action="Orders">
                        <i class="bi bi-receipt me-2"></i> Orders
                    </a>
                </li>
            </ul>

            <div class="mt-auto pt-3 border-top border-secondary">
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <div class="user-profile-box mb-3">
                        <p class="small text-muted mb-1">Signed in as:</p>
                        <p class="mb-2 fw-bold text-truncate">@User.Identity.Name</p>

                        @if (User.IsInRole("Admin"))
                        {
                            <span class="badge bg-primary w-100 mb-3">Administrator</span>
                        }

                        <form asp-controller="Account" asp-action="Logout" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-outline-danger btn-sm w-100">
                                <i class="bi bi-box-arrow-right me-1"></i> Logout
                            </button>
                        </form>
                    </div>
                }
                else
                {
                    <a class="btn btn-primary btn-sm w-100" asp-controller="Account" asp-action="Login">
                        <i class="bi bi-person-circle me-1"></i> Login
                    </a>
                }
            </div>
        </aside>

        <main class="flex-fill p-4">

            <div class="container-fluid">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success alert-dismissible fade show border-0 shadow-sm" role="alert">
                        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Message"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show border-0 shadow-sm" role="alert">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @RenderBody()
            </div>
        </main>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>